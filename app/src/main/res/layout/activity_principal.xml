<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_fundo"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="br.edu.ifspsaocarlos.sdm.sorteadorjogos.view.PrincipalActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_jogar_dados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/dado2" />

        <Button
            android:id="@+id/btn_cronometro_xadrez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/xadrez" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_marcador_tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/relogio" />

        <Button
            android:id="@+id/btn_roleta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roleta" />
    </LinearLayout>
</LinearLayout>